# MOTOSNAP Environment Variables Template
# Copy this file to .env.local and fill in your values

# Database Configuration
DATABASE_URL=jdbc:mysql://localhost:3306/motosnap
DB_USERNAME=root
DB_PASSWORD=your_password_here

# Connection Pool Settings (Optional - defaults provided)
# DB_POOL_MAX_SIZE=20
# DB_POOL_MIN_IDLE=5
# DB_CONNECTION_TIMEOUT=20000

# JWT Security (REQUIRED for production)
JWT_SECRET=your-super-secure-256-bit-secret-key-here-minimum-32-characters
# JWT_ACCESS_EXPIRATION=900000
# JWT_REFRESH_EXPIRATION=604800000

# Server Configuration (Optional)
# SERVER_PORT=8080
# COOKIE_SECURE=true

# Logging Levels (Optional)
# LOG_LEVEL=INFO
# SECURITY_LOG_LEVEL=WARN
# SQL_LOG_LEVEL=WARN

# Development/Production Mode
SPRING_PROFILES_ACTIVE=dev

# For Production Deployment (Heroku/Render)
# PORT=8080
# DATABASE_URL=postgres://user:pass@host:port/dbname
# DDL_AUTO=validate
# SHOW_SQL=false